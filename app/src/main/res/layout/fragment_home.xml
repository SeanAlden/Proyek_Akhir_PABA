<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/nusantara_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/produkBtn"
        android:layout_width="95dp"
        android:layout_height="88dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners"
        android:src="@drawable/produk_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Product"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/produkBtn"
        app:layout_constraintStart_toStartOf="@+id/produkBtn"
        app:layout_constraintTop_toBottomOf="@+id/produkBtn" />

    <ImageButton
        android:id="@+id/supplierBtn"
        android:layout_width="95dp"
        android:layout_height="88dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners"
        android:src="@drawable/supplier_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Supplier"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/supplierBtn"
        app:layout_constraintStart_toStartOf="@+id/supplierBtn"
        app:layout_constraintTop_toBottomOf="@+id/supplierBtn" />

    <ImageButton
        android:id="@+id/cashierBtn"
        android:layout_width="95dp"
        android:layout_height="88dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_corners"
        android:src="@drawable/cashier_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Cashier"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/cashierBtn"
        app:layout_constraintStart_toStartOf="@+id/cashierBtn"
        app:layout_constraintTop_toBottomOf="@+id/cashierBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>