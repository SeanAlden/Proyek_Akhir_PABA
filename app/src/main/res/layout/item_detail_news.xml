<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgDetailNews"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/rounded_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDetailNewsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/white"
        android:hint="News Title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imgDetailNews"
        app:layout_constraintStart_toStartOf="@+id/imgDetailNews"
        app:layout_constraintTop_toBottomOf="@+id/imgDetailNews" />

    <TextView
        android:id="@+id/txtDetailNewsSource"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppinsregular"
        android:hint="News Source"
        android:textColor="@color/grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/txtDetailNewsTitle"
        app:layout_constraintStart_toStartOf="@+id/imgDetailNews"
        app:layout_constraintTop_toBottomOf="@+id/txtDetailNewsTitle" />

    <TextView
        android:id="@+id/txtDetailNewsDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppinsregular"
        android:hint="News Description"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/txtDetailNewsTitle"
        app:layout_constraintStart_toStartOf="@+id/imgDetailNews"
        app:layout_constraintTop_toBottomOf="@+id/txtDetailNewsSource" />

    <Button
        android:id="@+id/btnToSource"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/blue"
        android:text="Open News Source"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/txtDetailNewsDesc"
        app:layout_constraintTop_toBottomOf="@+id/txtDetailNewsDesc" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imgDetailNews"
        app:layout_constraintEnd_toEndOf="@+id/imgDetailNews"
        app:layout_constraintStart_toStartOf="@+id/imgDetailNews"
        app:layout_constraintTop_toTopOf="@+id/imgDetailNews" />

</androidx.constraintlayout.widget.ConstraintLayout>