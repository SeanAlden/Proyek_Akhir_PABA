<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".registerPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgNusantaraLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/smartact_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgNusantaraFont"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:src="@drawable/smartact_font"
                app:layout_constraintStart_toEndOf="@+id/imgNusantaraLogo"
                app:layout_constraintTop_toTopOf="@+id/imgNusantaraLogo" />

    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/imgNusantaraLogo"
        app:layout_constraintTop_toBottomOf="@+id/imgNusantaraLogo" />

    <TextView
        android:id="@+id/tvSignUpDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Looks like you don’t have account. Let’s create a new account for you"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgNusantaraLogo"
        app:layout_constraintTop_toBottomOf="@+id/tvSignUp" />

    <TextView
        android:id="@+id/tvFull_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Full Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tvSignUpDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvSignUpDescription" />

    <EditText
        android:id="@+id/etFull_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="70dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/background"
        android:hint="your full name"
        android:textAlignment="center"
        android:textColorHint="#717171"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvFull_Name"
        app:layout_constraintTop_toBottomOf="@+id/tvFull_Name" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Username"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/etFull_Name"
        app:layout_constraintTop_toBottomOf="@+id/etFull_Name" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/background"
        android:hint="your userame"
        android:textAlignment="center"
        android:textColorHint="#717171"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvUsername"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

    <TextView
        android:id="@+id/tvEmaill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/etUsername"
        app:layout_constraintTop_toBottomOf="@+id/etUsername" />

    <EditText
        android:id="@+id/etEmaill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="70dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/background"
        android:hint="xxxx@example.com"
        android:textAlignment="center"
        android:textColorHint="#717171"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvFull_Name"
        app:layout_constraintTop_toBottomOf="@+id/tvEmaill" />

    <TextView
        android:id="@+id/tvPasswordd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tvSignUpDescription"
        app:layout_constraintTop_toBottomOf="@+id/etEmaill" />

    <EditText
        android:id="@+id/etPasswordd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="70dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/background"
        android:hint="****"
        android:textAlignment="center"
        android:textColorHint="#717171"
        android:textSize="15sp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etEmaill"
        app:layout_constraintTop_toBottomOf="@+id/tvPasswordd" />

            <Button
                android:id="@+id/btnCreateAccount"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="70dp"
                android:background="@drawable/background_login"
                android:backgroundTint="@color/green"
                android:text="CREATE ACCOUNT"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/etPasswordd"
                app:layout_constraintTop_toBottomOf="@+id/etPasswordd" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/btnCreateAccount"
                app:layout_constraintStart_toStartOf="@+id/btnCreateAccount"
                app:layout_constraintTop_toBottomOf="@+id/btnCreateAccount">

                <TextView
                    android:id="@+id/tvQuestionGoToSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="ALREADY HAVE ACCOUNT?"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnGoToSignInPage"
                    app:layout_constraintEnd_toStartOf="@+id/btnGoToSignInPage"
                    app:layout_constraintStart_toStartOf="@+id/btnCreateAccount"
                    app:layout_constraintTop_toTopOf="@+id/btnGoToSignInPage" />

                <Button
                    android:id="@+id/btnGoToSignInPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:backgroundTint="@color/black"
                    android:text="Sign-in"
                    android:textColor="#00D8C4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnCreateAccount" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>