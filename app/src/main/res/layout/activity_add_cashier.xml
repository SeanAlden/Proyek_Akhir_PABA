<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="project.c14210052_c14210182.proyekakhir_paba.addCashierPage">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewHeaderAddCashier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/headerContainerAddCashier"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTambahProduk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Tambah Cashier"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/headerContainerAddCashier"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/headerContainerAddCashier" />

            <ImageButton
                android:id="@+id/btnBackFromAddCashier"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/grey"
                android:src="@drawable/back_symbol"
                app:layout_constraintBottom_toBottomOf="@+id/headerContainerAddCashier"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/headerContainerAddCashier" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/etSearchCashier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:ems="20"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewHeaderAddCashier" />

    <ImageView
        android:id="@+id/containerKategoriCashier"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSearchCashier" />

    <Button
        android:id="@+id/btnCategoryCashier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#606060"
        android:text="KATEGORI PRODUK"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/containerKategoriCashier"
        app:layout_constraintEnd_toEndOf="@+id/containerKategoriCashier"
        app:layout_constraintTop_toTopOf="@+id/containerKategoriCashier" />

    <Spinner
        android:id="@+id/spinnerCategoryCashier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/containerKategoriCashier"
        app:layout_constraintEnd_toStartOf="@+id/btnCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/containerKategoriCashier" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_down"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerCategoryCashier"
        app:layout_constraintEnd_toEndOf="@+id/spinnerCategoryCashier"
        app:layout_constraintTop_toTopOf="@+id/spinnerCategoryCashier" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAddCashier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerKategoriCashier" />

</androidx.constraintlayout.widget.ConstraintLayout>